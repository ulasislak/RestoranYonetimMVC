@using RestoranMenüSiparisMVC.Data

@model List<ProductViewModel>
@{
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menü Listesi</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .menu-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
        }

        .menu-card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            transition: transform 0.3s ease;
        }

            .menu-card:hover {
                transform: translateY(-5px);
            }

        .menu-title {
            color: #dc3545; /* Kırmızı renk */
            font-weight: bold;
            margin-bottom: 10px;
        }

        .menu-details {
            color: #6c757d;
        }

        .btn-update {
            background-color: #fd7e14; /* Turuncu renk */
            border-color: #fd7e14;
            color: white;
            margin-right: 10px;
        }

            .btn-update:hover {
                background-color: #e76e00; /* Koyu turuncu */
                border-color: #e76e00;
            }

        .btn-delete {
            background-color: #dc3545; /* Kırmızı renk */
            border-color: #dc3545;
            color: white;
        }

            .btn-delete:hover {
                background-color: #c82333; /* Koyu kırmızı */
                border-color: #bd2130;
            }
    </style>
</head>
<body>
    <div class="menu-container">
        <h1 class="text-center mb-4" style="color: #dc3545;">Menü Listesi</h1>
        @foreach (var menu in Model)
        {
            <div class="menu-card">
                <h3 class="menu-title">@menu.Name</h3>
                <p class="menu-details"><strong>İçindekiler:</strong> @menu.Ingredient</p>
                <p class="menu-details"><strong>Fiyat:</strong> @menu.Price.ToString("C")</p>
                <div class="text-center">
                    <a asp-action="UpdateMenu" asp-route-id="@menu.Id" class="btn btn-update">Güncelle</a>
                    <form asp-action="DeleteMenu" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@menu.Id" />
                        <button type="submit" class="btn btn-delete">Sil</button>
                    </form>
                </div>
            </div>
        }
    </div>

    <!-- Bootstrap 5 JS (Popper.js olmadan) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>